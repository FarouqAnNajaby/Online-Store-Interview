<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="5dp"
        android:elevation="5dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_nama_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_img"
        tools:text="Nama Product"
        style="@style/text_title_halaman"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_judul_total_variant_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_product"
        tools:text="Nama Product"
        style="@style/text_title_halaman"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tv_total_variant_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_judul_total_variant_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_product"
        tools:text="5"
        style="@style/text_title_halaman"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_judul_total_stock_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_total_variant_product"
        tools:text="Nama Product"
        style="@style/text_title_halaman"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_total_stock_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tv_judul_total_variant_product"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_total_variant_product"
        tools:text="5"
        style="@style/text_title_halaman"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_harga_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_judul_total_stock_product"
        tools:text="Rp0 (harga terendah)"
        style="@style/text_subjudul_blue"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>